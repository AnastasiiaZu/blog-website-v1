<%- include("partials/header"); -%>

<h1>Compose</h1>

<form class="form" action="/compose" method="post">
  <div class="form-group">

    <label for="postTitle" class="form-label">Title</label>
    <input class="form-control" type="text" id="postTitle" name="postTitle" autocomplete="off">

    <label for="postBody" class="form-label">Post</label>
    <textarea class="form-control" id="postBody" name="postBody" autocomplete="off" rows="3"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>

<%- include("partials/footer"); -%>
